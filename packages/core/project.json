{
  "name": "core",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "/core/src",
  "targets": {
    "build": {
      "executor": "@monodon/rust:napi",
      "options": {
        "dist": "packages/core",
        "jsFile": "packages/core/index.js"
      },
      "configurations": {
        "production": {
          "dist": "dist/packages/core",
          "release": true
        }
      }
    },
    "test": {},
    "lint": {
      "executor": "@monodon/rust:lint",
      "outputs": ["{options.target-dir}"],
      "options": {
        "target-dir": "dist/target/core"
      }
    }
  },
  "tags": []
}
